<h2>Edit: <%= @venue.name %></h2>

<form action ="/venues/<%=@venue.id%>" method= 'post'>

  <label class='add'>Name:
  <input type='text' name='name' value="<%= @venue.name %>">
  </label>
  <label class='add'>Capacity:
  <input type='text' name='capacity' value="<%= @venue.capacity %>">
  </label>
  <label class='add'>Photo:
  <input type='text' name='image_url' value="<%= @venue.image_url %>">
  </label>
  <label class='add'>Description:
    <textarea name='description'> <%= @venue.description %> </textarea>
    </label>

<input class='add_button' type="submit" value="Update This Venue's Details">
</form>
