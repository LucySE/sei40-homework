<h2>Category: <%=@category.name%></h2>
<table>
  <tr>
    <td><strong>Name: </strong></td>
    <td><%=@category.name%></td>
  </tr>
  <tr>
    <td><strong>Description: </strong></td>
    <td><%=@category.description%></td>
  </tr>
  <% if @category.id != 1 %>
  <tr>
    <td><a href="/category/<%=@category.id%>/edit">Edit</a></td>
  </tr>
  <% end %>
</table>
